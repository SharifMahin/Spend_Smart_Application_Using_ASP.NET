@{
    ViewData["Title"] = "Expense";
}

@model List<Expense>
<div class="text-center">
    <h1 class="display-4">Expenses</h1>
    <br />
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Value</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var exp in Model)
                {
                    <tr>
                        <td>
                        @exp.Id
                        </td>
                        <td>
                            @exp.Value
                        </td>
                        <td>
                            @exp.Description
                        </td>
                    </tr>
                }
            }
        </tbody>

    </table>
</div>